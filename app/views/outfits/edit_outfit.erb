<div class="row justify-content-md-center ">
    <div class="col-sm-8 ">
      <div class="jumbotron">
        <h2 class="display-4">Update Outfit</h2>
          <div class="form-group">
            <form action="/outfits/<%=@outfit.slug%>" method="POST">
            <input type="hidden" name="_method" value="PATCH">

                <lable>Change Outfit's Name</label>
                <input class="" type="text" name="outfit[name]" value ="<%=@outfit.name%>"><br></br>

                <%if @outfit.items.empty?%>
                  <div class="form-check">
                    <label><h4>Add Items</h4></label> <a class="add-item" href="/items/new">Add New item</a> <br>
                  </div>
                    <% @add_items.each do |item| %>
                      <input class="form-check-input" type="checkbox" name="outfit[add_items][]" value="<%= item.id %>">
                      <label class="form-check-label" for="defaultCheck1"><%= item.name.capitalize %><br>
                    <% end %>
                  </div>
                  <input class="btn btn-info btn-block link-button" type="submit" value="Update Outfit">
                </form>
            <%else%>

              <lable><h4>Remove Items</h4></label>
                <div class="form-check">
                  <% @outfit.items.each do |item| %>
                    <input class="form-check-input" type="checkbox" name="outfit[delete_items][]" value="<%= item.id %>">
                    <label class="form-check-label" for="defaultCheck1"><%= item.name.capitalize %><br>
                  <% end %>
                </div>

                <label class="top-buffer-md"><h4>Add Items</h4></label> <a id="edit-add" href="/items/new">Add New item</a> <br>
                <div class="form-check">
                  <% @add_items.each do |item| %>
                    <input class="form-check-input" type="checkbox" name="outfit[add_items][]" value="<%= item.id %>">
                    <label class="form-check-label" for="defaultCheck1"><%= item.name.capitalize %><br>
                  <% end %>
                </div>
              <input class="btn btn-info btn-block link-button top-buffer-md" type="submit" value="Update Outfit">
            </form>
          <% end %>
        </div>
      </div>
    </div>
  </div>
