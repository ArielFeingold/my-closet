<div class="row justify-content-md-center ">
  <div class="col-sm-8 ">
    <div class="jumbotron">
      <h3 class="display-4">Create Outfit</h3>
      <form class="form-group" action="/outfits" method="POST">
          <input class="top-fuffer-xs" type="text" name="outfit[name]" placeholder="Outfit's Name"/required><br></br>
          <label><h4>Choose Items</h4></label> <a class="add-item" href="/items/new">Add New item</a> <br>
        <div class="form-check">
          <% @user.items.each do |item| %>
            <input class="form-check-input" type="checkbox" name="outfit[item_ids][]" value="<%= item.id %>">
            <label class="form-check-label" for="defaultCheck1"><%= item.name.capitalize %><br>
          <% end %>
        </div>
        <div>
          <input class="btn btn-info btn-block" type="submit" value="Create New Outfit">
        </div>
      </form>
  </div>
</div>
