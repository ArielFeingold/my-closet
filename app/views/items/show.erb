
<div class="row justify-content-md-center ">
  <div class="col-sm-8 ">
    <div class="jumbotron">
      <h2 class="display-4"><%=@item.name.capitalize%></h2>
      <table class="table table-responsive w-auto">
        <tbody>
          <tr>
            <th scope="row">Category</th>
            <td><%=@item.category.capitalize%></td>
          </tr>
          <tr>
            <th scope="row">Type</th>
            <td><%=@item.item_type.capitalize%></td>
          </tr>
          <tr>
            <th scope="row">Color</th>
            <td><%=@item.color.capitalize%></td>
          </tr>
        </tbody>
      </table>

      <p><a class="link-button btn btn-info btn-block link-button" href="/items/<%=@item.id%>/<%=@item.slug%>/edit">Update Item</a></p>
      <p><a class="link-button btn btn-info btn-block link-button" href="/items/new">Create New Item</a></p>



      <form method="post" action="/items/<%=@item.id%>/<%=@item.slug%>/delete">
        <input id="hidden" type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-outline-danger btn-block" value="Delete Item">
      </form>
    </div>
  </div>
</div>
