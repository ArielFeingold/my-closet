<div class="row justify-content-md-center ">
  <div class="col-sm-8 ">
    <div class="jumbotron">
      <h2 class="display-4"><%=@item.name%></h2>
      <div class="">
        <form action="/items/<%=@item.slug%>" method="POST">
            <input type="hidden" name="_method" value="PATCH">
            <div class="form-group">
                <label for="name">Name</label> <br>
                <input type="text" name="name" value="<%=@item.name%>"/>
            </div>

            <div class="form-group">
              <label for="name">Category</label> <br>
                <div class="input-group mb-3">
                  <select class="custom-select" id="inputGroupSelect01" name="category">
                    <option value="shirts">Shirt</option>
                    <option value="coat">Coat</option>
                    <option value="jacket">Jacket</option>
                    <option value="pants">Pants</option>
                    <option value="dress">Dress</option>
                    <option value="skirt">Skirt</option>
                    <option value="shoes">Shoes</option>
                    <option value="accessories">Accessories</option>
                  </select>
                </div>
            </div>

            <div class="form-group">
                <label for="category">Type</label> <br>
                <input type="text" name="item_type" value="<%=@item.item_type%>"/>
            </div>

            <div class="form-group">
                <label for="color">color</label> <br>
                <input type="text" name="color" value="<%=@item.color%>"/>
            </div>

            <input class="btn btn-info btn-block" type="submit" value="Update Item">
        </form>
    </div>
  </div>
</div>
