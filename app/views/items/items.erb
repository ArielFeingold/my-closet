<div class="row justify-content-md-center ">
  <div class="col-sm-8 ">
    <div class="jumbotron">
      <h2 class="display-4">Your Items</h2>
      <%if @items.size == 0%>
          <div class="alert alert-warning" role="alert">
            No items to show. Click below to add your first item.
          </div>
      <% else %>
      <%@categories.each do |c|%>
          <h3 class="top-buffer-md"><%=c.capitalize%></h3>
          <%items = @items.find_all{|item| item.category == c}%>
          <%items.each do |i|%>
            <ul class="list-group">
              <li class="list-group-item"><a href="/items/<%=i.id%>/<%=i.slug%>"><%=i.name.capitalize%></a></li>
            </ul>

          <% end %>
        <% end %>
      <% end %>
            <p><a class="link-button btn btn-info btn-block link-button top-buffer-md" href="/items/new">Create a New Item</a></p>
            <p><a class="link-button btn btn-secondary btn-block link-button top-buffer-md" href="/outfits/new">Create a New Outfit</a></p>
    </div>
  </div>
</div>
