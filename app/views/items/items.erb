<div class="row justify-content-md-center ">
  <div class="col-sm-8 ">
    <div class="jumbotron">
      <h2 class="display-4">Your Items</h2>
      <%if @items.size == 0%>
        <p>No Outfits to show. Click <a href="/items/new">HERE</a> to create your first item</p>
      <% else %>
      <%@categories.each do |c|%>
          <h3 class="top-buffer-xs"><%=c.capitalize%></h3>
          <%items = @items.find_all{|item| item.category == c}%>
          <%items.each do |i|%>
            <ul class="list-group">
              <li class="list-group-item"><a href="/items/<%=i.slug%>"><%=i.name.capitalize%></a></li>
            </ul>

          <% end %>
        <% end %>
      <% end %>
            <p><a class="link-button btn btn-info btn-block link-button top-buffer-md" href="/items/new">Create a New Item</a></p>
    </div>
  </div>
</div>
